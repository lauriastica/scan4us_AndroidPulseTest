<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <android.support.v7.widget.Toolbar
        android:layout_marginBottom="130dp"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <Button
        android:onClick="clickBtons"
         android:drawablePadding="-15dp"
        android:drawableStart="@drawable/ic_photo_camera_white_36dp"
        android:layout_marginBottom="30dp"
        style="@style/ThemeButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/text_photo"
        android:id="@+id/bton_phone"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="clickBtons"
        android:drawableStart="@drawable/ic_heart_white_36dp"
        android:layout_marginBottom="30dp"
        style="@style/ThemeButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/text_heart"
        android:id="@+id/bton_pulse"
        android:layout_below="@+id/bton_phone"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="clickBtons"
        android:drawablePadding="-15dp"
        android:drawableStart="@drawable/ic_location_on_white_36dp"
        style="@style/ThemeButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/text_gps"
        android:id="@+id/bton_gps"
        android:layout_below="@+id/bton_pulse"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
